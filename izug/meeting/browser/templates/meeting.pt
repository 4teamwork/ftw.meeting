<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
	xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en"
	metal:use-macro="here/main_template/macros/master" i18n:domain="izug.meeting">
	<body>

		<metal:main fill-slot="main">
			<tal:main-macro metal:define-macro="main"
				tal:define="templateId template/getId;
                            meeting_type python:context.getMeeting_type()">

				<metal:block metal:use-macro="here/@@custom_header/macros/header | here/base/macros/header" />

				<div tal:replace="structure provider:plone.abovecontentbody" />
                
				<table class="MeetingListing">
					<tr tal:condition="context/location | nothing">
						<td class="table-label"><span i18n:translate="meeting_label_location">Location</span></td>
						<td>
							<tal:block tal:content="context/location" />
						</td>
					</tr>
                    
                    <tal:dates define="start_field context/start;
                                       end_field context/end;
                                       start_date python:start_field and start_field.strftime('%d.%m.%Y') or '';
                                       start_time python:start_field and start_field.strftime('%H:%M') or '';
                                       end_date python:end_field and end_field.strftime('%d.%m.%Y') or '';
                                       end_time python:end_field and end_field.strftime('%H:%M') or ''">
                        <tal:day tal:condition="python: (start_date == end_date) and 'dates' in meeting_type">
                        <tr>
                            <td class="table-label"><span i18n:translate="meeting_label_date">Date</span></td>
                            <td>
                                <tal:block replace="start_date" />    
                            </td>
                        
                        </tr>
                        <tr>
                            <td class="table-label"><span i18n:translate="meeting_label_duration">Duration</span></td>
                            <td>
                                <tal:block tal:content="string:${start_time} - ${end_time}" />
                            </td>
                        </tr>
                        </tal:day>
                        <tal:mutli condition="python:start_date != end_date">
                            <tr tal:condition="python: context.start() and context.getMeeting_type() != 'poodle_additional' or None">
                                <td class="table-label"><span i18n:translate="meeting_label_start_date">Start Date</span></td>
                                <td>
                                    <tal:block tal:content="python: context.start_date.strftime('%d.%m.%Y')" />
                                </td>
                            </tr>
                            <tr tal:condition="python: context.start() and context.getMeeting_type() != 'poodle_additional' or None">
                                <td class="table-label"><span i18n:translate="meeting_label_start_time">Start Time</span></td>
                                <td>
                                    <tal:block tal:content="python: context.start_date.strftime('%H:%M')" />
                                </td>
                            </tr>
                            <tr tal:condition="python: context.end() and context.getMeeting_type() != 'poodle_additional' or None">
                                <td class="table-label"><span i18n:translate="meeting_label_end_date">End Date</span></td>
                                <td>
                                    <tal:block tal:content="python: context.end_date.strftime('%d.%m.%Y')" />
                                </td>
                            </tr>
                            <tr tal:condition="python: context.end() and context.getMeeting_type() != 'poodle_additional' or None">
                                <td class="table-label"><span i18n:translate="meeting_label_end_time">End Time</span></td>
                                <td>
                                    <tal:block tal:content="python: context.end_date.strftime('%H:%M')" />
                                </td>
                            </tr>
                        </tal:mutli>
                    </tal:dates>
                    
                    <tr tal:define="related python:here.computeRelatedItems()" tal:condition="related">
                        <td class="table-label"><span i18n:translate="meeting_label_relations">Relations</span></td>
                        <td>
                            <tal:block tal:condition="python:related">
                                <ul>
                                <tal:related tal:repeat="item related"
                                             tal:define="use_view_action site_properties/typesUseViewActionInListings|python:();">
                                    <li tal:define="
                                            desc                item/Description;
                                            item_type           item/portal_type;
                                            item_icon           python:plone_view.getIcon(item);
                                            item_type           item/portal_type;
                                            item_type_class     python:'contenttype-' + normalizeString(item_type);
                                            item_url            item/absolute_url;
                                            item_url            python:(item_type in use_view_action) and item_url+'/view' or item_url">
                                        <span tal:attributes="class item_type_class">
                                            <img tal:replace="structure item_icon/html_tag" />
                                            <a href="" class=""
                                               tal:attributes="href  item_url;
                                                               title item/Description;"
                                               tal:content="item/pretty_title_or_id">
                                                Related Item
                                            </a>
                                        </span>
                                    </li>
                                </tal:related>
                                </ul>
                            </tal:block>
                        </td>
                    </tr>
                    
                    <tr tal:condition="context/getResponsibility | nothing">
                        <td class="table-label"><span i18n:translate="meeting_label_responsibility">Responsibility</span>:</td>
                        <td>
                            <ul class="AttendeesListing" tal:define="userids python:[u['contact'] for u in here.getResponsibility()]">
                                <li tal:repeat="userid python:context.getResponsibilityInfos(userids)">
                                    <tal:exists condition="python:len(userid['url'])>0">
                                        <a tal:attributes="href python:userid['url']" tal:content="python:userid['name']" />
                                    </tal:exists>
                                    <span tal:condition="python:len(userid['url'])==0" tal:content="python:userid['name']" />
                                </li>
                            
                            </ul>
                        
                        </td>
                    </tr>                    
					<tr tal:condition="context/head_of_meeting | nothing">
						<td class="table-label"><span i18n:translate="meeting_label_head_of_meeting">Head of Meeting</span>:</td>
						<td tal:define="userids python:here.getHead_of_meeting()" tal:repeat="userid userids">
                            <a tal:define="user python:context.acl_users.getUserById(userid)"
                                tal:attributes="href string:${here/portal_url}/author/${userid}"
                                tal:content="python:user and user.getProperty('fullname', userid) or userid">
                            </a>    
						</td>
					</tr>
					<tr tal:condition="context/recording_secretary | nothing">
						<td class="table-label"><span i18n:translate="meeting_label_recording_secretary">Recording Secretary</span>:</td>
						<td tal:define="userids python:here.getRecording_secretary()" tal:repeat="userid userids">
                            <a tal:define="user python:context.acl_users.getUserById(userid)"
                                tal:attributes="href string:${here/portal_url}/author/${userid}"
                                tal:content="python:user and user.getProperty('fullname', userid) or userid">
                            </a>    
						</td>
					</tr>
                    <tr tal:condition="context/getAttendees | nothing">
                        <td class="table-label"><span i18n:translate="meeting_label_attendees">Attendees</span>:</td>
                        <td>
                            <ul class="AttendeesListing" tal:define="userids python:[u['contact'] for u in here.getAttendees()]">
                                <li tal:repeat="userid userids">
                                    <tal:user tal:define="user python:context.acl_users.getUserById(userid)">
                                        <tal:user_existing tal:condition="user">
                                            <a tal:define="user python:context.acl_users.getUserById(userid)"
                                               tal:attributes="href string:${here/portal_url}/author/${userid}"
                                               tal:content="python:user and user.getProperty('fullname',userid) or userid">
                                            </a>
                                        </tal:user_existing>
                                        <tal:user_missing tal:condition="not:user">
                                            <span tal:content="userid" />
                                        </tal:user_missing>
                                    </tal:user>
                                </li>
                            
                            </ul>
                        
                        </td>
                    </tr>
                    <tr tal:condition="context/Description | nothing">
                        <td class="table-label"><span i18n:translate="meeting_label_description">Description</span></td>
                        <td>
                            <tal:block tal:content="here/Description" />
                        </td>
                    </tr>
                    <tr tal:condition="python: context.getMeeting_type() != 'poodle_additional' and context.start() and context.end()">
                        <td class="table-label"><span i18n:translate="meeting_label_export">Export</span></td>
                        <td>
                            <img height="16" width="16" title="vCal export" alt="" tal:attributes="src string:${here/portal_url}/icon_export_vcal.png"/>
                            <a href="./vcs_view" title="vCal" i18n:translate="">
                                vCal
                            </a>
                            <br />  
                            <img height="16" width="16" title="vCal export" alt="" tal:attributes="src string:${here/portal_url}/icon_export_ical.png"/>
                            <a href="./ics_view" title="vCal" i18n:translate="">
                                iCal
                            </a>
                        </td>
                    </tr>

                </table>

				<tal:items tal:define="meeting_items python:context.getFolderContents({'portal_type':['Meeting Item']}, full_objects=True);"
				       tal:condition="meeting_items">

                    <tal:block tal:repeat="obj meeting_items">
                        <div tal:attributes="id string:${obj/UID}" class="MeetingItemWrapper">
                            <div class="MeetingItemHead">
                                <img tal:attributes="src string:${here/portal_url}/++resource++meeting-styles/arrow_right.png"
                                     class="toggleImage"
                                     alt="Arrwo Down" width="16px" />
                                <a tal:content="obj/title" tal:attributes="href obj/absolute_url">
                                    Title
                                </a>
                            </div>
                            <div class="MeetingItemBody" style="display:none">
                                <table>
                                    <colgroup>
                                        <col width="20%"/>
                                        <col width="*">
                                    </colgroup>
                                    <tr>
                                        <th><span i18n:translate="meeting_label_responsibility">Responsibility</span></th>
                                        <td>
                                            <span tal:replace="python:obj.getResponsibilityString()">
                                               Attendees
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><span i18n:translate="meeting_label_text">Text</span></th>
                                        <td>
                                            <span tal:replace="structure obj/getText">BodyText</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><span i18n:translate="meetingitem_label_conclusion">Conclusion</span></th>
                                        <td>
                                            <span tal:replace="structure obj/getConclusion">Conclusion</span>
                                        </td>
                                    </tr>
                                    <tr tal:define="tasks python:obj.getFolderContents({'portal_type':['Task'], 'sort_on' : 'effective', 'sort_order' : 'descending'}, full_objects=True)"
                                        tal:condition="tasks">
                                        <th><span i18n:translate="meeting_label_tasks">Tasks</span></th>
                                        <td>
                                            <table class="MeetginItemTasks">
                                                <tr class="even" tal:repeat="task tasks">
                                                    <td>&nbsp;</td>
                                                    <td>
                                                        <a href="#" tal:attributes="href task/absolute_url" tal:content="task/title_or_id"></a>
                                                        <div tal:content="structure task/text">Text</div>
                                                    </td>
                                                    <td tal:condition="task/responsibility"
                                                        tal:define="userid python:task.responsibility[0];
                                                                    user python:context.acl_users.getUserById(userid)">
                                                        <div tal:content="python:user and user.getProperty('fullname',userid) or userid">Responsibility</div>
                                                    </td>
                                                    <td>&nbsp;</td>
                                                    <td tal:define="task_state task/review_state|python: wtool.getInfoFor(task, 'review_state', '');
                                                                    task_wf_state_class python:'state-' + normalizeString(task_state);">
                                                        <div i18n:translate="" tal:attributes="class task_wf_state_class" tal:content="task_state" />
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr tal:define="related python:obj.computeRelatedItems()" tal:condition="related">
                                        <th class="table-label"><span i18n:translate="meeting_label_relations">Relations</span></th>
                                        <td>
                                            <tal:block tal:condition="python:related">
                                                <ul>
                                                <tal:related tal:repeat="item related"
                                                             tal:define="use_view_action site_properties/typesUseViewActionInListings|python:();">
                                                    <li tal:define="
                                                            desc                item/Description;
                                                            item_type           item/portal_type;
                                                            item_icon           python:plone_view.getIcon(item);
                                                            item_type           item/portal_type;
                                                            item_type_class     python:'contenttype-' + normalizeString(item_type);
                                                            item_url            item/absolute_url;
                                                            item_url            python:(item_type in use_view_action) and item_url+'/view' or item_url">
                                                        <span tal:attributes="class item_type_class">
                                                            <img tal:replace="structure item_icon/html_tag" />
                                                            <a href="" class=""
                                                               tal:attributes="href  item_url;
                                                                               title item/Description;"
                                                               tal:content="item/pretty_title_or_id">
                                                                Related Item
                                                            </a>
                                                        </span>
                                                    </li>
                                                </tal:related>
                                                </ul>
                                            </tal:block>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
					    <tr class="even" tal:repeat="meeting_item_file python:obj.getFolderContents({'portal_type':['File'], 'sort_on' : 'effective', 'sort_order' : 'descending'}, full_objects=True)">
					        <td>&nbsp;</td>
					        <td>
					            <a href="#" tal:attributes="href string:${meeting_item_file/absolute_url}/download" tal:content="meeting_item_file/title_or_id"></a>
					            <div tal:content="meeting_item_file/Description">Description</div>
                            <div tal:content="structure meeting_item_file/text">Text</div>
					            <div tal:content="meeting_item_file/Creator">Creator</div>
					        </td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
					    </tr>
	                </tal:block>
                </tal:items>

                <table tal:define="files view/getFiles" tal:condition="files" class="listing" width="100%">
                    <tr>
                        <th width="*" i18n:translate="">Attachments</th>
                    </tr>
                    <tr class="odd" tal:repeat="file files">
                        <td>
                            <a href="#" tal:attributes="href string:${file/url}/download">
                                <img tal:attributes="src file/icon" />
                                <span tal:replace="file/title" /></a>
                            <div tal:content="file/Description">Description</div>
                            <div tal:content="file/Creator">Creator</div>
                        </td>
                    </tr>
                </table>

                <div class="poodleListing" width="100%"
                       tal:define="poodles python:context.getFolderContents({'portal_type':'Poodle',}, full_objects=True);
                                   context_poodle python:(context.getUsers() and context.getDates()) and [context] or [];
                                   poodles python:context_poodle+poodles"
                       tal:condition="python: poodles and 'poodle' in meeting_type">
                       
                    <div class="poodleItems" tal:repeat="poodle poodles">
                        <tal:poodle define="data poodle/getPoodleData">
                            <a tal:condition="python: context != poodle"
                               tal:attributes="href poodle/absolute_url;
                                               title poodle/Description" 
                               class="PoodleItemTitle" tal:content="poodle/Title">poodle title</a>
                            
                            <div tal:replace="structure python:view.renderPoodleTable(poodle)"></div>
                        </tal:poodle>
                    </div>
                       
                </div>
                


                <div tal:replace="structure provider:plone.belowcontentbody" />
			</tal:main-macro>
		</metal:main>
	</body>
</html>
